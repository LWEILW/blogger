<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunshine.dao.BloggerMapperEx">

    <select id="bloggerList" resultType="com.sunshine.entity.Blogger">
        select * from blogger
    </select>

    <insert id="createBlogger" parameterType="com.sunshine.entity.Blogger">
        insert into blogger
        (
        id,
        title,
        content,
        author
        )
        values
        (
        #{blogger.id},
        #{blogger.title},
        #{blogger.title},
        #{blogger.title}
        )
    </insert>


    <delete id="deleteBlogger" parameterType="java.lang.String">
    delete from blogger where id=#{id}
    </delete>

    <update id="updateBlogger" parameterType="com.sunshine.entity.Blogger">
     update  blogger set title = #{blogger.title}, content =  #{blogger.title} , author =  #{blogger.author} where id = #{blogger.id}
    </update>

    <select id="getBlogger" parameterType="java.lang.String" resultType="com.sunshine.entity.Blogger">
        select * from blogger where id=#{id}
    </select>

    <select id="getBloggerByParam" parameterType="java.lang.String" resultType="com.sunshine.entity.Blogger">
        select * from blogger where title LIKE "%"#{searchParam}"%"
    </select>

</mapper>